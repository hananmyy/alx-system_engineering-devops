#!/usr/bin/env bash
# Configures Nginx to return a custom 404 page

apt-get update -y
apt-get install nginx -y

# Create the custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Insert error_page config into server block
sed -i '/^\s*location \/ {/a \\terror_page 404 /custom_404.html;' /etc/nginx/sites-available/default

# Restart nginx using service (not systemctl)
service nginx restart
